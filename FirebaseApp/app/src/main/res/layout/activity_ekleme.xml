<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txt_adsoyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="59dp"
        android:ems="10"
        android:hint="Müşterinin Adını Soyadını Giriniz"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txt_mail"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txt_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="73dp"
        android:ems="10"
        android:hint="Müşterinin mailini giriniz"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/txt_telefon"
        app:layout_constraintEnd_toEndOf="@+id/txt_adsoyad"
        app:layout_constraintStart_toStartOf="@+id/txt_telefon" />

    <EditText
        android:id="@+id/txt_telefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="296dp"
        android:ems="10"
        android:hint="Müşterinin telefonunu giriniz"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="52dp"
        android:text="Kaydı Ekle"
        app:layout_constraintEnd_toEndOf="@+id/txt_telefon"
        app:layout_constraintTop_toBottomOf="@+id/txt_telefon" />
</androidx.constraintlayout.widget.ConstraintLayout>