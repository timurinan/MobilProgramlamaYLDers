<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtKartSahibi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="Kredi Kartı Hesap Sahibi"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtKartNumarası"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Kart Numaranızı Giriniz"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txtKartSahibi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtKartSahibi"
        app:layout_constraintTop_toBottomOf="@+id/txtKartSahibi" />

    <EditText
        android:id="@+id/txtSonKullanımTarihi"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="SKT"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/txtKartNumarası"
        app:layout_constraintTop_toBottomOf="@+id/txtKartNumarası" />

    <EditText
        android:id="@+id/txtSonKullanımTarihi2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="CVC"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/txtKartNumarası"
        app:layout_constraintTop_toBottomOf="@+id/txtKartNumarası" />

    <Button
        android:id="@+id/btnOdeme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="40dp"
        android:text="Ödeme Yap"

        app:layout_constraintStart_toStartOf="@+id/txtSonKullanımTarihi"
        app:layout_constraintTop_toBottomOf="@+id/txtSonKullanımTarihi2" />

</androidx.constraintlayout.widget.ConstraintLayout>